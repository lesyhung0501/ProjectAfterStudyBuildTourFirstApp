<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/edtProvince"
            android:hint="Enter Your City"
            android:layout_marginRight="30dp"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </EditText>
        <Button
            android:background="@drawable/bkbutton"
            android:id="@+id/btnOK"
            android:text="Search"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="40dp">
        </Button>
    </LinearLayout>
    <TextView
        android:id="@+id/txtProvince"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="City/Province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/txtNational"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <ImageView
        android:id="@+id/imgWeatherIcon"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="50dp"
        android:layout_height="50dp">
    </ImageView>
    <TextView
        android:id="@+id/txtTemper"
        android:textStyle="bold"
        android:textColor="#D3D6187A"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:text="Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/txtTemperState"
        android:textStyle="bold"
        android:textColor="#CE2FE622"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:text="State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="33"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/clouds"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </ImageView>
            <TextView
                android:id="@+id/txtCloud"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Cloudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="33"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/humidity"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </ImageView>
            <TextView
                android:id="@+id/txtHumidity"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="33"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/wind"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </ImageView>
            <TextView
                android:id="@+id/txtWind"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Windy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtCurentTemper"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="CurentTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_marginLeft="100sp"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="0dp"
            android:src="@drawable/sunrise"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="30dp">
        </ImageView>
        <TextView
            android:id="@+id/txtSunrise"
            android:layout_marginLeft="10dp"
            android:layout_weight="90"
            android:textColor="#E65E424D"
            android:textSize="16sp"
            android:text="Sunrise"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="100sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="0dp"
            android:src="@drawable/sunset"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="30dp">
        </ImageView>
        <TextView
            android:id="@+id/txtSunset"
            android:layout_marginLeft="10dp"
            android:layout_weight="90"
            android:textColor="#E65E424D"
            android:textSize="16sp"
            android:text="Sunset"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>


</LinearLayout>